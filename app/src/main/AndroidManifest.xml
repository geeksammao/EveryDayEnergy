<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.geeksammao.everydayenergertic" >

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".main.MyActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".detail.DetailActivity"
            android:label="@string/app_name" >
        </activity>

        <receiver
            android:name=".receiver.EnergyNotifyReceiver"
            android:enabled="true"
            android:exported="true" >
        </receiver>
        <receiver
            android:name=".receiver.NoteWritingReceiver"
            android:enabled="true"
            android:exported="true" >
        </receiver>

        <activity
            android:name=".writenote.WritingActivity"
            android:label="@string/title_activity_writing" >
        </activity>
    </application>

</manifest>
